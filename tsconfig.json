{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ESNEXT",
        "module": "ESNEXT",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "moonhare": ["packages/moonhare/src"],
            "@moonhare/*": ["packages/*/src"]
        },
        "declaration": true,
    },
    "include": ["packages/*/src"]
}
